def ler_notas():
    notas = []
    for i in range(5):
        nota = float(input(f"Digite a nota {i+1}: "))
        notas.append(nota)
    return notas

def calcular_media(notas):
    soma = 0
    for nota in notas:
        soma += nota
    media = soma / 5
    return media

def determinar_situacao(media):
    if media >= 7:
        return "Aprovado"
    elif 4 <= media < 7:
        return "Recuperação"
    else:
        return "Reprovado"

notas = ler_notas()
media = calcular_media(notas)
situacao = determinar_situacao(media)

print(f"Média: {media:.2f}")
print(f"Situação: {situacao}")
